<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.minatogithuborg.orgremoval1</groupId>
    <artifactId>orgRemoval1</artifactId>
    <version>1.0.0</version>
  </parent>
  <artifactId>BackendAppParent</artifactId>
  <packaging>pom</packaging>
  <properties>
	<start-class>com.minatogithuborg.orgremoval1.Orgremoval1Application</start-class>
  </properties>
  <dependencies>
		<dependency>
			<groupId>com.minatogithuborg.orgremoval1</groupId>
			<artifactId>BackendCommonBase</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
    		<groupId>com.minatogithuborg.orgremoval1</groupId>
        	<artifactId>Frontend</artifactId>
        	<version>1.0.0</version>
        	<type>zip</type>
     	</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.2</version>
                <executions>
                	<execution>
                    	<id>unpack-directives</id>
                        <phase>prepare-package</phase>
                        <goals>
                        	<goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                        	<includeGroupIds>com.minatogithuborg.orgremoval1</includeGroupIds>
                            <includeArtifactIds>Frontend</includeArtifactIds>
                            <outputDirectory>${basedir}/target/classes/static</outputDirectory>
                            <stripClassifier>true</stripClassifier>
                        </configuration>
                    </execution>
                 </executions>
             </plugin>
			<plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
		</plugins>
		<resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>*.properties</include>
                </includes>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <targetPath>.</targetPath>
                <excludes>
                    <exclude>*.properties</exclude>
                </excludes>
            </resource>
			<resource>
                <directory>src/main/appengine</directory>
                <includes>
                    <include>*.yaml</include>
                </includes>
                <filtering>true</filtering>
            </resource>

        </resources>
	</build>
	<profiles>
		<profile>
			<id>local</id>
			<properties>
				<app-name>vb-eva-gen</app-name>
				<app-version>1-0-0</app-version>
				<env-suffix>DEV</env-suffix>
			</properties>
			<activation> 
            	<activeByDefault>true</activeByDefault>
        	</activation>
		</profile>
		<profile>
			<id>cloud-run-prod</id>
			<properties>
				<app-name>vb-eva-gen</app-name>
				<app-version>1-0-0</app-version>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>com.google.cloud.tools</groupId>
						<artifactId>jib-maven-plugin</artifactId>
						<version>3.3.0</version>
						<configuration>
								<from>
								<image>bellsoft/liberica-openjre-alpine:17.0.7-7</image>
							</from>
							<to>
								<image>europe-west1-docker.pkg.dev/vb-eva-gen/orgremoval1-repository/orgremoval1</image>
								<tags>
									<tag>${IMAGE_VERSION_ID}_${COMMIT_ID}</tag>
								</tags>
							</to>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>cloud-run-dev</id>
			<properties>
				<app-name>vb-eva-gen</app-name>
				<app-version>1-0-0</app-version>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>com.google.cloud.tools</groupId>
						<artifactId>jib-maven-plugin</artifactId>
						<version>3.3.0</version>
						<configuration>
								<from>
								<image>bellsoft/liberica-openjre-alpine:17.0.7-7</image>
							</from>
							<to>
								<image>europe-west1-docker.pkg.dev/vb-eva-gen/orgremoval1-repository/orgremoval1</image>
								<tags>
									<tag>${IMAGE_VERSION_ID}_${COMMIT_ID}</tag>
								</tags>
							</to>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>cloud-run-test</id>
			<properties>
				<app-name>vb-eva-gen</app-name>
				<app-version>1-0-0</app-version>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>com.google.cloud.tools</groupId>
						<artifactId>jib-maven-plugin</artifactId>
						<version>3.3.0</version>
						<configuration>
								<from>
								<image>bellsoft/liberica-openjre-alpine:17.0.7-7</image>
							</from>
							<to>
								<image>europe-west1-docker.pkg.dev/vb-eva-gen/orgremoval1-repository/orgremoval1</image>
								<tags>
									<tag>${IMAGE_VERSION_ID}_${COMMIT_ID}</tag>
								</tags>
							</to>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>cloud-run-pre-prod</id>
			<properties>
				<app-name>vb-eva-gen</app-name>
				<app-version>1-0-0</app-version>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>com.google.cloud.tools</groupId>
						<artifactId>jib-maven-plugin</artifactId>
						<version>3.3.0</version>
						<configuration>
								<from>
								<image>bellsoft/liberica-openjre-alpine:17.0.7-7</image>
							</from>
							<to>
								<image>europe-west1-docker.pkg.dev/vb-eva-gen/orgremoval1-repository/orgremoval1</image>
								<tags>
									<tag>${IMAGE_VERSION_ID}_${COMMIT_ID}</tag>
								</tags>
							</to>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
     </profiles>
</project>